<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 450">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#6D28D9" /> <!-- Purple -->
      <stop offset="50%" stop-color="#8B5CF6" /> <!-- Violet -->
      <stop offset="100%" stop-color="#EC4899" /> <!-- Pink -->
    </linearGradient>
    
    <!-- Element gradients -->
    <linearGradient id="browserGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#ffffff" />
      <stop offset="100%" stop-color="#f3f4f6" />
    </linearGradient>
    
    <linearGradient id="paperGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#ffffff" />
      <stop offset="100%" stop-color="#f8fafc" />
    </linearGradient>
  </defs>
  
  <!-- Main background -->
  <rect width="800" height="450" fill="url(#bgGradient)" />
  
  <!-- Abstract design elements -->
  <circle cx="100" cy="80" r="60" fill="white" opacity="0.1" />
  <circle cx="700" cy="380" r="100" fill="white" opacity="0.1" />
  <polygon points="650,50 750,100 700,180" fill="white" opacity="0.1" />
  
  <!-- Browser window -->
  <g transform="translate(150, 100)">
    <!-- Browser frame -->
    <rect x="0" y="0" width="320" height="200" rx="8" fill="url(#browserGradient)" filter="drop-shadow(0px 4px 6px rgba(0, 0, 0, 0.1))" />
    
    <!-- Browser header -->
    <rect x="0" y="0" width="320" height="30" rx="8 8 0 0" fill="#f1f5f9" />
    
    <!-- Browser buttons -->
    <circle cx="20" cy="15" r="5" fill="#f87171" />
    <circle cx="40" cy="15" r="5" fill="#fbbf24" />
    <circle cx="60" cy="15" r="5" fill="#34d399" />
    
    <!-- URL bar -->
    <rect x="80" y="10" width="220" height="10" rx="5" fill="#e2e8f0" />
    
    <!-- Browser content - modern blog layout -->
    <rect x="20" y="40" width="280" height="30" rx="4" fill="#e2e8f0" /> <!-- Header -->
    <rect x="20" y="80" width="180" height="10" rx="2" fill="#cbd5e1" /> <!-- Text line -->
    <rect x="20" y="100" width="220" height="10" rx="2" fill="#cbd5e1" /> <!-- Text line -->
    <rect x="20" y="120" width="200" height="10" rx="2" fill="#cbd5e1" /> <!-- Text line -->
    <rect x="20" y="150" width="120" height="30" rx="4" fill="#8B5CF6" /> <!-- Button -->
  </g>
  
  <!-- Notebook/paper element -->
  <g transform="translate(500, 150) rotate(10)">
    <!-- Paper -->
    <rect x="0" y="0" width="180" height="220" rx="4" fill="url(#paperGradient)" filter="drop-shadow(2px 4px 6px rgba(0, 0, 0, 0.1))" />
    
    <!-- Paper lines -->
    <line x1="20" y1="40" x2="160" y2="40" stroke="#e2e8f0" stroke-width="2" />
    <line x1="20" y1="70" x2="160" y2="70" stroke="#e2e8f0" stroke-width="2" />
    <line x1="20" y1="100" x2="160" y2="100" stroke="#e2e8f0" stroke-width="2" />
    <line x1="20" y1="130" x2="160" y2="130" stroke="#e2e8f0" stroke-width="2" />
    <line x1="20" y1="160" x2="160" y2="160" stroke="#e2e8f0" stroke-width="2" />
    <line x1="20" y1="190" x2="160" y2="190" stroke="#e2e8f0" stroke-width="2" />
    
    <!-- Pen -->
    <g transform="translate(90, -20) rotate(45)">
      <rect x="0" y="0" width="8" height="140" rx="4" fill="#475569" />
      <polygon points="0,0 8,0 4,20" fill="#0EA5E9" />
    </g>
  </g>
  
  <!-- Responsive design icons -->
  <g transform="translate(50, 320)">
    <!-- Desktop icon -->
    <rect x="0" y="0" width="50" height="40" rx="2" fill="white" opacity="0.8" />
    <rect x="15" y="40" width="20" height="10" fill="white" opacity="0.8" />
    <rect x="5" y="50" width="40" height="2" fill="white" opacity="0.8" />
    
    <!-- Tablet icon -->
    <rect x="70" y="5" width="35" height="45" rx="2" fill="white" opacity="0.8" />
    <circle cx="87.5" cy="55" r="2" fill="white" opacity="0.8" />
    
    <!-- Mobile icon -->
    <rect x="125" y="10" width="20" height="40" rx="2" fill="white" opacity="0.8" />
    <rect x="132" y="52" width="6" height="2" rx="1" fill="white" opacity="0.8" />
  </g>
  
  <!-- Title text -->
  <text x="400" y="350" font-family="'Noto Sans SC', Arial, sans-serif" font-size="40" font-weight="bold" text-anchor="middle" fill="white">现代博客最佳实践</text>
  
  <!-- Decorative elements -->
  <circle cx="200" cy="50" r="4" fill="white" opacity="0.6" />
  <circle cx="220" cy="70" r="2" fill="white" opacity="0.5" />
  <circle cx="180" cy="90" r="3" fill="white" opacity="0.7" />
  <circle cx="600" cy="100" r="5" fill="white" opacity="0.6" />
  <circle cx="580" cy="80" r="3" fill="white" opacity="0.5" />
  <circle cx="620" cy="120" r="2" fill="white" opacity="0.7" />
</svg>