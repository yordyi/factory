<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 450">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#0070F3" /> <!-- Next.js blue -->
      <stop offset="50%" stop-color="#4F46E5" /> <!-- Indigo -->
      <stop offset="100%" stop-color="#7E22CE" /> <!-- Purple -->
    </linearGradient>
    
    <!-- Geometric pattern gradient -->
    <linearGradient id="shapeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#ffffff" stop-opacity="0.1" />
      <stop offset="100%" stop-color="#ffffff" stop-opacity="0.05" />
    </linearGradient>
  </defs>
  
  <!-- Main background -->
  <rect width="800" height="450" fill="url(#bgGradient)" />
  
  <!-- Abstract geometric shapes -->
  <polygon points="0,0 200,150 0,300" fill="url(#shapeGradient)" opacity="0.4" />
  <circle cx="700" cy="100" r="80" fill="url(#shapeGradient)" opacity="0.3" />
  <rect x="500" y="300" width="300" height="150" fill="url(#shapeGradient)" opacity="0.2" />
  <polygon points="400,50 500,150 300,150" fill="url(#shapeGradient)" opacity="0.3" />
  
  <!-- Next.js logo inspired element -->
  <g transform="translate(150, 180) scale(1.5)">
    <!-- Stylized "N" shape inspired by Next.js logo -->
    <path d="M50,20 L90,100 L90,20 L110,20 L110,140 L90,140 L50,60 L50,140 L30,140 L30,20 Z" fill="white" />
    
    <!-- Triangular element -->
    <polygon points="130,20 180,20 130,140" fill="white" />
  </g>
  
  <!-- Title text -->
  <text x="400" y="350" font-family="'Noto Sans SC', Arial, sans-serif" font-size="40" font-weight="bold" text-anchor="middle" fill="white">Next.js 15 新特性解析</text>
  
  <!-- Decorative dots -->
  <circle cx="150" cy="50" r="5" fill="white" opacity="0.8" />
  <circle cx="170" cy="70" r="3" fill="white" opacity="0.6" />
  <circle cx="130" cy="90" r="4" fill="white" opacity="0.7" />
  <circle cx="650" cy="380" r="6" fill="white" opacity="0.8" />
  <circle cx="680" cy="350" r="4" fill="white" opacity="0.6" />
  <circle cx="620" cy="400" r="3" fill="white" opacity="0.7" />
  
  <!-- Tech-inspired grid lines -->
  <line x1="0" y1="225" x2="800" y2="225" stroke="white" stroke-width="0.5" opacity="0.2" />
  <line x1="400" y1="0" x2="400" y2="450" stroke="white" stroke-width="0.5" opacity="0.2" />
</svg>
